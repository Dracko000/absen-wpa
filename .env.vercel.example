# Vercel Environment Variables Template
# Copy this to .env.production and set your values before deploying

# Application settings
APP_NAME="Attendance App"
APP_ENV=production
APP_KEY=          # Generate with: php artisan key:generate --show
APP_DEBUG=false
APP_URL=          # Your Vercel deployment URL (e.g., https://myapp.vercel.app)

# Database connection
DB_CONNECTION=mysql
DB_HOST=          # External database host
DB_PORT=3306
DB_DATABASE=      # Database name
DB_USERNAME=      # Database username
DB_PASSWORD=      # Database password

# Session and cache (optimized for Vercel serverless)
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
CACHE_DRIVER=array
QUEUE_CONNECTION=sync

# Mail settings (optional)
MAIL_MAILER=log    # Change to smtp/sendgrid/etc. for production emails
MAIL_HOST=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS="noreply@yourapp.com"
MAIL_FROM_NAME="${APP_NAME}"

# Third-party services
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (if needed)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"